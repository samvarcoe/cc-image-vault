{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2017", "DOM"],
    "outDir": "./public/js",
    "rootDir": "./src/ui/static/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "src/ui/static/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}