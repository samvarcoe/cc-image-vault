{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "lib": ["ES2017", "DOM"],
    "outDir": "./public/js",
    "rootDir": "client/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "client/src/**/*",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "client/src/routes.ts"
  ]
}