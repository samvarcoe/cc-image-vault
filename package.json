{
  "name": "image-vault",
  "version": "1.0.0",
  "description": "Image curation app",
  "main": "index.js",
  "scripts": {
    "css:watch": "npx @tailwindcss/cli -i client/src/styles/input.css -o public/style.css --watch --content \"client/src/**/view.ts\"",
    "ts:watch": "tsc --project tsconfig.client.json --watch",
    "server:watch": "tsx watch server.ts",
    "dev": "concurrently \"npm run css:watch\" \"npm run ts:watch\" \"npm run server:watch\"",
    "lint": "npx eslint",
    "build": "npx tsc --noEmit",
    "api:tests": "npx mocha --config api/tests/acceptance/.mocharc.json",
    "domain:tests": "npx mocha --config domain/tests/acceptance/.mocharc.json",
    "client:tests": "npx playwright test --config client/tests/acceptance/playwright.config.ts",
    "tests:all": "npm run domain:tests && npm run api:tests && npm run client:tests",
    "checks": "npm run build && npm run tests:all && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samvarcoe/cc-image-vault.git"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/samvarcoe/cc-image-vault/issues"
  },
  "homepage": "https://github.com/samvarcoe/cc-image-vault#readme",
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.33.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@playwright/test": "1.55.0",
    "@sinonjs/fake-timers": "^14.0.0",
    "@tailwindcss/cli": "^4.1.13",
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^6.0.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chai": "^5.2.2",
    "@types/chai-match-pattern": "^1.3.4",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/sinon": "^17.0.4",
    "@types/sinonjs__fake-timers": "^8.1.5",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "chai": "^6.0.1",
    "chai-match-pattern": "^1.3.0",
    "chai-subset": "^1.6.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "mocha": "^11.7.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sinon": "^21.0.0",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.7.5",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.2.0",
    "compression": "^1.8.1",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "hnswlib-node": "^3.0.0",
    "multer": "^2.0.2",
    "sharp": "^0.34.3",
    "uuid": "^11.1.0"
  }
}
